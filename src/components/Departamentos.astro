<script>
    declare global {
        interface Window {
            eliminarDep: (id: number) => Promise<void>;
        }
    }
    interface Departamento {
        id: number;
        titulo: string;
        descripcion: string;
        contenido: string;
        fecha_creacion: string;
    }

    const contenedor = document.getElementById('contenedorDep') as HTMLElement;
    let scrollAmount = 0;
    let scrollSpeed = 1;
    let isDragging = false;
    let startX = 0;
    let scrollLeft = 0;
    let autoScrollId: number;
    let resumeTimeout: number;
    const token = localStorage.getItem('token');

    document.addEventListener('DOMContentLoaded', async () => {
        try {
            const departamentos = await cargarDepartamentos();
            if (departamentos.length >= 4) {
                duplicarContenido(); // Para efecto infinito
                autoScroll();
                setupDrag();
            }
        } catch (error) {
            console.error("Error al cargar departamentos:", error);
        }
    });

    async function cargarDepartamentos(): Promise<Departamento[]> {
        const response = await fetch('http://127.0.0.1:8000/departamento');
        if (!response.ok) throw new Error('Error al obtener departamentos');

        const departamentos: Departamento[] = await response.json();
        if (!contenedor) return [];

        contenedor.innerHTML = '';
        departamentos.sort((a, b) => new Date(b.fecha_creacion).getTime() - new Date(a.fecha_creacion).getTime());

        departamentos.forEach(dep => {
            const card = document.createElement('div');
            card.className = 'bg-blue-600/10 rounded-lg shadow-md overflow-hidden w-auto max-w-sm mb-4 mx-2 hover:scale-105 transition duration-300 ease-in-out';
            card.innerHTML = `
                <img src="${dep.contenido}" alt="Imagen de departamento" class="object-contain w-full h-auto">
                <div class="p-4">
                    <h2 class="text-xl font-medium mb-2 text-gray-200">${dep.titulo}</h2>
                    <p class="text-gray-200 text-sm mb-3">${dep.descripcion}</p>
                    ${token ? `<button onclick="eliminarDep(${dep.id})" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-800 transition cursor-pointer">Eliminar</button>` : ''}
                </div>
            `;
            contenedor.appendChild(card);
        });
        return departamentos;
    }

    function duplicarContenido() {
        contenedor.innerHTML += contenedor.innerHTML;
    }

    function autoScroll() {
        scrollAmount += scrollSpeed;
        if (scrollAmount >= contenedor.scrollWidth / 2) {
            scrollAmount = 0;
        }
        contenedor.scrollLeft = scrollAmount;
        autoScrollId = requestAnimationFrame(autoScroll);
    }

    function setupDrag() {
        contenedor.addEventListener('pointerdown', e => {
            isDragging = true;
            startX = e.pageX;
            scrollLeft = contenedor.scrollLeft;
            cancelAnimationFrame(autoScrollId);
            clearTimeout(resumeTimeout);
        });

        contenedor.addEventListener('pointermove', e => {
            if (!isDragging) return;
            const x = e.pageX;
            const walk = startX - x;
            contenedor.scrollLeft = scrollLeft + walk;
        });

        const stopDrag = () => {
            if (!isDragging) return;
            isDragging = false;
            resumeTimeout = setTimeout(() => autoScroll(), 1000);
        };

        contenedor.addEventListener('pointerup', stopDrag);
        contenedor.addEventListener('mouseleave', stopDrag);
    }

    async function eliminarDep(id: number) {
        const response = await fetch(`http://127.0.0.1:8000/eliminar-dep/${id}`, {
            method: 'DELETE',
            headers: {
                'Authorization': `Bearer ${token}`
            }
        });

        if (response.ok) {
            alert('Departamento eliminado');
            location.reload(); // recarga todo para evitar problemas con contenido duplicado
        } else if (response.status === 401) {
            alert('Sesión expirada. Por favor vuelve a iniciar sesión.');
            localStorage.removeItem('token');
            location.reload();
        } else {
            alert('Error al eliminar departamento');
        }
    }

    window.eliminarDep = eliminarDep;
</script>
